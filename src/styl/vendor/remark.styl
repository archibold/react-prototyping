*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family "san francisco text", helvetica, arial, sans-serif
  font-size 36px

h1, h2, h3, h4, p, pre
  font-size 36px
  max-width 900px
  margin 0 auto

h1, h2, h3
  font-weight bold
  margin-bottom 0

h1
  font-size 3em

h2
  font-size 1.5em

.footnote
  position absolute
  bottom 3em

li
  p
    line-height 1.25em

.red
  color #fa0000

.large
  font-size 2em

a, a > code
  color rgb(249, 38, 114)
  text-decoration none

code
  -moz-border-radius 5px
  -web-border-radius 5px
  background #e7e8e2
  border-radius 5px
  text-align left
  background-color #f7f7f7 !important
  font-size 1em
  padding 0.25em !important
  color #444

pre
  overflow-x hidden
  overflow-y visible
  code
    font-size 0.75em
    padding 2em !important

.pull-left
  float left
  width 47%

.pull-right
  float right
  width 47%
  & ~ p
    clear both

.remark-container
  background-color white

.remark-slide-scaler
  box-shadow none
  height 100vh !important
  width 100vw !important
  top 0 !important
  left 0 !important
  transform none !important

.remark-position
  display none

.remark-code
  font-size 0.8em

.remark-slide-content
  &.title
    background-color black
    color white
